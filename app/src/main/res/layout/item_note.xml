<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditNotesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_note_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/date_note_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:gravity="end"
        android:layout_below="@id/title_note_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        android:textSize="11sp" />
    <TextView
        android:id="@+id/hor_line_tas_header_new_task_frag_textview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="7.5dp"
        android:layout_marginRight="7.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHorLine" />
</RelativeLayout>